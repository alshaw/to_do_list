<h1>To Do List</h1>
<ol>

  <% @items.each do |item| %>

    <div>
      <li>
        <%= link_to item.task, item_path(item) %>
        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Delete', item_path(item), method: :delete %>
      </li>
    </div>

  <%end%>
</ol>

<%= link_to 'New Task', new_item_path %>
